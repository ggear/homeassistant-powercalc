{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "manufacturer.json contains discovery information for a manufacturer",
  "type": "object",
  "required": [
    "name"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The directory name",
      "deprecated": true
    },
    "full_name": {
      "type": "string",
      "description": "The full vendor/brand name"
    },
    "dir_name": {
      "type": "string",
      "description": "The directory name"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Aliases for this manufacturer"
    }
  }
}
